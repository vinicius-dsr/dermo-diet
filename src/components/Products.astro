---
const products = [
  {
    name: "Dermo Diet - 15 cápsulas",
    price: "R$ 167,00",
    description: "Suplemento 100% natural para acelerar o metabolismo",
    image: "/image.jpeg",
  },
  {
    name: "Dermo Diet - 30 cápsulas",
    price: "R$ 267,00",
    description: "Fórmula exclusiva para desintoxicação do organismo",
    image: "/image.jpeg",
  },
  {
    name: "Dermo Diet - 60 cápsulas",
    price: "R$ 427,00",
    description: "Potencialize a queima de gordura naturalmente",
    image: "/image.jpeg",
  },
  {
    name: "Dermux Premium",
    price: "R$ 427,00",
    description: "Potencialize a queima de gordura naturalmente",
    image: "/image2.jpeg",
  },
];

const whatsappLink =
  "https://wa.me/5516992092884?text=Ol%C3%A1,%20tenho%20interesse%20no%20produto:%20";
---

<section id="produtos" class="py-20 bg-light">
  <div class="container mx-auto px-4 mt-10">
    <h2 class="text-4xl font-bold text-center mb-12 text-secondary">
      Nossos Produtos
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        products.map((product) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-100">
            <img
              src={product.image}
              alt={product.name}
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-secondary">
                {product.name}
              </h3>
              <p class="text-gray-600 mb-4">{product.description}</p>
              <p class="text-2xl font-bold text-primary mb-4">
                {product.price}
              </p>
              <a
                href={`${whatsappLink}${product.name}`}
                class="block w-full bg-accent text-white text-center py-3 rounded-lg font-semibold hover:bg-accent/90 transition-colors"
              >
                Pedir no WhatsApp
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
